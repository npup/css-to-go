{
  "name": "css-to-go",
  "version": "0.9.9",
  "author": "P.Envall <petter.envall@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/npup/css-to-go"
  },
  "homepage": "https://github.com/npup/css-to-go#readme",
  "description": "A bit of global CSS to help shape up the looks of a plain HTML document.  Has a dark mode and a light mode.",
  "keywords": [
    "css",
    "to go",
    "simple",
    "bare bones",
    "global"
  ],
  "type": "module",
  "main": "dist/css-to-go.min.css",
  "files": [
    "dist/*.css",
    "src/*.css"
  ],
  "devDependencies": {
    "@snowpack/plugin-postcss": "^1.4.3",
    "cssnano": "^5.0.8",
    "postcss-cli": "^8.3.1",
    "postcss-import": "^14.0.2",
    "postcss-simple-extend": "^1.0.0",
    "snowpack": "^3.8.6"
  },
  "scripts": {
    "prepublish": "npm run build",
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "npm run build-css:max && npm run build-css:min",
    "build-css": "npx postcss src/main.css",
    "build-css:min": "CSS_MINIFY=true npm run build-css -- -o dist/css-to-go.min.css",
    "build-css:max": "npm run build-css -- -o dist/css-to-go.css",
    "dev": "snowpack dev"
  }
}
